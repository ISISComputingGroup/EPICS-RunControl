	field(FTVL, "CHAR")
	field(FLNK, "$(PV):$(MODE):_IN:DO.PROC")
}	

record(aSub, "$(PV):$(MODE):_IN:DO")
{
    field(SNAM, "removeFromSet")
	field(INPA, "$(P)CS:$(MODE):_SETNAME")
	field(FTA, "STRING")
	field(INPB, "$(PV):$(MODE):_IN")
	field(FTB, "CHAR")
	field(NOB, "256")
	field(INPC, "$(PV):$(MODE):_IN.NELM") # NORD not set by CA
	field(FTC, "ULONG")
